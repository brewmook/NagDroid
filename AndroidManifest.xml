<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coolhandmook.nagdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".NewNagActivity"
            android:label="@string/create_new_nag" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coolhandmook.nagdroid.MainActivity" />
        </activity>

        <activity
            android:name=".ShowScheduleActivity"
            android:label="@string/title_activity_show_schedule" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coolhandmook.nagdroid.MainActivity" />
        </activity>
        
        <service
            android:name=".NagService"
            android:enabled="true" />
    </application>

</manifest>